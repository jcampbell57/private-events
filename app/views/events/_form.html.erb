<% if @event.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

    <ul>
      <% @event.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @event do |form| %>
  <div>
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>
  
  <div>
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :creator %>
    <%#= form.text_field :creator, disabled: true, placeholder: current_user.username %>
    <%= form.text_field :creator, disabled: true, placeholder: @event.creator.username %>
  </div>

  <br>

  <div>
    <%= form.submit "Submit" %>
  </div>
<% end %>